<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ListActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng chọn:" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rdGiaiPTBacHai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giải PT bậc hai" />

        <RadioButton
            android:id="@+id/rdKiemTraSoHoanHao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiểm tra số Hoàn Hảo" />

        <RadioButton
            android:id="@+id/rdNoiVaDaoNguocXau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nối và đảo ngược xâu" />

        <RadioButton
            android:id="@+id/rdGuiTNVaHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi tin nhắn và hình ảnh" />

        <RadioButton
            android:id="@+id/rdUngDungXemAnh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ứng dụng xem ảnh" />

        <RadioButton
            android:id="@+id/rdThucHienCuocGoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thực hiện cuộc gọi" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exit" />
    </LinearLayout>
</LinearLayout>